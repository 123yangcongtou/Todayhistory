<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:card_item="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:clickable="true"
    card_item:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_item:cardBackgroundColor="#fff"
    card_item:cardCornerRadius="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#ff4444"
            android:padding="6dp"
            android:textSize="16dp"
            android:text="wwwwwwwwwwwwwww"
            android:id="@+id/collection_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:padding="6dp"
            android:textSize="16dp"
            android:text="qqqqqqqqqqqqqqqqqqqq"
            android:id="@+id/collection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>
